mc = #FFF
bc = #ECECEC
ac = #FFED00
tc = #2B2422

*
  position relative
  box-sizing border-box
  user-select none
.btn
  cursor pointer

.clear-both
  clear: both
  height: 0
  width: 100%

body
  background-color: mc
  color tc
  font-size 12px
  margin: 0
  padding: 0
  font-family Proxima
  .content
    padding: 20px
    width: 760px
  .ig
    width: 100%
    .blocks
      width: 100%
      .organs
        float right
        .organ
          width: 45px
          margin-bottom: 5px;
          svg
            height: 51px
          .name
            text-align: center
            width: 200%
            margin-left: -50%
            margin-top: -5px
            text-transform: lowercase
          .bgr
            fill bc
          .pic
            position: absolute
            left: 0
            top: 3px
            border none
          &:hover
          &.selected
            .bgr
              fill ac
      .vitamins
        float: left
        .vitamin
          height: 29px
          margin-bottom: 25px
          &:last-child
            margin-bottom: 0
          .bgr
            fill bc
          .name
            color tc
            position: absolute
            left: 5px
            top: 0
            line-height: 29px
          &:hover
          &.selected
            .bgr
              fill ac

      .organs
        right: 0
    .graph
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      .horde
        fill none
        stroke-width 1px
        stroke bc
        &.selected
          stroke ac
  .titles
    .title:nth-child(1)
      float: left
    .title:nth-child(2)
      float: right
      width: 45px
      text-align: center
  .title
    font-size 45px
    text-transform: uppercase
    margin-bottom: 10px
    font-family Cervo
    &.sub
      font-size 10px